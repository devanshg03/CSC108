   "source": [
    "text = \"The python language is so much fun to learn.\"\n",
    "\n",
    "def sort_word( text: str) -> list[(int, str)]:\n",
    "    result = []\n",
    "    words = text.split()\n",
    "    for word in words:\n",
    "        result.append((len(word), word))\n",
    "    result.sort(reverse=True)\n",
    "    return result\n",
    "\n",
    "sort_word(text)"
   ]
  }
